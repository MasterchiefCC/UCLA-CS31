//////////////////////////////////////////////////////////////

void greet(int time){
for(int k=1; k<=time; k++)
cout<<"Hello"<<endl;
}

int main(){
int n;
cin>>n;
greet(3);
greet(2*n+2);
greet(1);
}

//////////////////////////////////////////////////////////////

void greet(int time, string msg){
for(int k=1; k<=time; k++)
cout<<msg<<endl;
}

int main(){
int n;
cin>>n;
greet(2*n+2, "Ni Hao");
cin.ignore(10000,'\n');
string MyMessage;
getline(cin, MyMessage);
greet(1, MyMessage);
}

