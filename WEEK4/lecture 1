bool isvalidPhoneNumber(string pn);
string digitsOf(string pn);

int main(){
  cout << "Enter a phone number:";
	string phone;
	getline(cin, phone);
  if(isvalidPhoneNumber)
  cout<<"The digits in the phone number are<<digitOf(phone)<<endl;
  else
  cout<<"A phone number must have 10 digits<<endl;
  }

string digitOf(string pn){
string digitOnly="";
for(int k=0; k!=pn.size(); k++){
if(isdigit(pn[k]){
dititOnly+=pn[k];
}
return digitsOnly;
}

bool isvalidPhoneNumber(string pn){
int numberofDigits=0;
for(int k=0; k!= pn.size(); k++){
if(isdigit(pn[k])numberofDigit++;
}
return (numberofDigits==10);
}
