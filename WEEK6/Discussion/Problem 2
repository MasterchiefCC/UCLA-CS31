
#include<stdio.h>
#include<string.h>
#include<iostream>
using namespace std;

void string_concat(char a[], char b[]) {
	int len;
	for (len = 0; a[len] != 0; len++);
	for (int i = 0; b[i] != 0; i++) {
		a[len++] = b[i];
	}
	a[len] = 0;
}

int main() {
	char test_str_1[20] = "hello";
	char test_str_2[20] = "grape";
	string_concat(test_str_1, test_str_2);
	std::cout << test_str_1 << "\n";

	char test_str_3[20] = "hello";
	char test_str_4[20] = "";
	string_concat(test_str_3, test_str_4);
	std::cout << test_str_3 << "\n";
}
